<h1>EDITING <%= @lesson.name %></h1>
<hr />
<%= render('layouts/errors', :object => @lesson) %>


<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Lesson Name</label>
  <input id="lesson_name" type="text" name="lesson[name]" class = "form-control"  value="<%= @lesson.name %>" />
  <label for="lesson_content">Content</label>
  <textarea id="lesson_content" class = "form-control" name="lesson[content]" rows="6"><%= @lesson.content %></textarea>

  <button>UPDATE</button>
</form>

<hr />
<p><a href="/lessons/<%=@lesson.id %>">Return to Lesson</a> without saving</p>
